{
	"compilerOptions": {
		"target": "ESNext",
		"experimentalDecorators": true,
		"useDefineForClassFields": false,
		"module": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"moduleDetection": "force",
		"noEmit": true,

		/* Linting */
		"strict": true,
		"erasableSyntaxOnly": true,

		/* Paths */
		"paths": {
			"@app/*": ["./src/app/*"]
		},

		/* Types */
		"types": ["vite/client", "vite-plugin-pwa/client", "@types/dom-navigation", "urlpattern-polyfill"]
	},
	"include": ["src"]
}
